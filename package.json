{
  "name": "seafarnexus-electron",
  "productName": "SeafarNexus",
  "version": "1.3.0",
  "private": true,
  "description": "SeafarNexus packaged as an Electron desktop app (single-machine).",
  "main": "main.js",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "package:win": "electron-builder --win portable",
    "package:mac": "electron-builder --mac dmg zip",
    "package:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {},
  "build": {
    "appId": "org.seafar.nexus.desktop",
    "productName": "SeafarNexus",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "app/**"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "target": ["dmg", "zip"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "zip"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
